<odoo>
    <!-- Wizard Form View -->
    <record id="view_past_due_invoice_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">past.due.invoice.confirmation.wizard.form</field>
        <field name="model">past.due.invoice.wizard</field>
        <field name="arch" type="xml">
             <form string="Confirm">
                    <p>Do you want to include the current invoice in the list</p>
                <footer>
                    <button name="action_add_invoices" string="Yes" type="object" class="btn-primary"/>
                    <button name="action_add_invoices" string="No" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open the Wizard -->

</odoo>
